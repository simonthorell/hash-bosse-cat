{
    "version": "2.0.0",
    "tasks": [
        {
            // Debug task
            "label": "CMake Build Task",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
                // Add additional arguments as needed
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Run executable task
            "label": "Run MyProject",
            "type": "shell",
            "command": "${workspaceFolder}/build/src/MyProject",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}